@model Trackplan.Models.MessageModel
@{
    ViewData["Title"] = "Diagonal";
}
<h1>@ViewData["Title"]</h1>


<table>
    @for (int i = 0; i < Model.Message.Length; i++)
    {
        <tr>
            @for(int j=0; j < Model.Message.Length; j++)
                {
                    <td>
                        @if(i == j)
                    {
                        @Model.Message[i]
                    }
                    </td>
                }
        </tr>
    }
</table>